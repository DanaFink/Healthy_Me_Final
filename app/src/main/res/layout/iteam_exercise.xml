<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <ImageView
            android:id="@+id/imgGIF"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="fitCenter"
            android:contentDescription="Exercise Image"
            android:src="@drawable/back_bi_thumb" />

        <TextView
            android:id="@+id/tvBodyPart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Body Part: waist"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/tvName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name: 3/4 sit-up"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvEquipment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Equipment: body weight"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvTarget"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Target Muscle: abs"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvInstructions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Instructions go here..."
            android:textSize="14sp" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
